{
    "name": "pycmd",
    "displayName": "PYCMD",
    "description": "evaluate python expression with a hotkey in a terminal",
    "version": "0.0.5",
    "repository": "https://github.com/insilica/vscode-pycmd.git",
    "publisher": "insilica",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./out/main.js",
    "activationEvents": [
        "onCommand:extension.pycmd"
    ],
    "contributes": {
        "commands": [
            {
                "command": "extension.pycmd",
                "title": "pycmd evaluate python expression in active terminal"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "test-compile": "tsc -p ./",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/mocha": "^8.2.2",
        "@types/node": "^12.20.4",
        "@types/vscode": "^1.80.0",
        "@typescript-eslint/eslint-plugin": "^4.28.2",
        "@typescript-eslint/parser": "^4.28.2",
        "esbuild": "^0.19.2",
        "eslint": "^7.30.0",
        "mocha": "^10.2.0",
        "typescript": "^4.3.5"
    }
}
